@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<section class="section">
    <div class="col-lg-4">        
        <div class="card mb-3">
            <div class="card-body">
                <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Registrar</h5>
                    <p class="text-center small">Criar uma Conta</p>
                </div>
                <form class="row g-3" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-12">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Input.Username" class="form-label"></label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend">@@</span>
                            <input asp-for="Input.Username" class="form-control" aria-required="true" />
                        </div>
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary w-100" id="registerSubmit" type="submit">Criar Conta</button>
                    </div>
                    <div class="col-12">
                        <p class="small mb-0">Já tem uma conta? <a asp-area="Identity" asp-page="/Account/Login">Entrar</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
