<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab.Contas</title>

    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/boxicons/css/boxicons.min.css" />
    <link rel="stylesheet" href="~/lib/remixicon/remixicon.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/v/dt/dt-1.13.1/datatables.min.css" />

    <!-- Template Main CSS File -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <!--link rel="stylesheet" href="~/Lab.Contas.styles.css" asp-append-version="true" /-->
</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a class="logo d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" alt="">
                <span class="d-none d-lg-block">Lab.Contas</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>
        <partial name="_LoginPartial" />
    </header>

    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed">
                    <i class="bi bi-journal-text"></i><span>Cadastros</span>
                </a>
                <ul id="forms-nav" class="nav-content">
                    <li>
                        <a asp-area="" asp-controller="ContaPagar" asp-action="Index">
                            <i class="bi bi-circle"></i>
                            <span>Contas a Pagar</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="ContaReceber" asp-action="Index">
                            <i class="bi bi-circle"></i>
                            <span>Contas a Receber</span>
                        </a>
                    </li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a asp-area="" asp-controller="TipoContaPagar" asp-action="Index">
                            <i class="bi bi-circle"></i>
                            <span>Tipos de Conta a Pagar</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="" asp-controller="Home" asp-action="Ajuda">
                    <i class="bi bi-question-circle"></i>
                    <span>Ajuda</span>
                </a>
            </li>
        </ul>
    </aside>

    <main id="main" class="main">
        @RenderBody()
    </main>

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; 2022 <strong><span>Lab.Contas</span></strong>
        </div>
        <div class="credits">
            <!-- All the links in the footer should remain intact. -->
            <!-- You can delete the links only if you purchased the pro version. -->
            <!-- Licensing information: https://bootstrapmade.com/license/ -->
            <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
            Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
        </div>
    </footer>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/apexcharts/apexcharts.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart.js/chart.min.js"></script>
    <script src="~/lib/echarts/echarts.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.2/moment.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.1/datatables.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
