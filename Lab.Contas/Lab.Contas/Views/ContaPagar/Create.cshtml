@model Lab.Contas.Models.ContaPagar

@{
    ViewData["Title"] = "Conta a Pagar";
    
    var listaTipoConta = ViewBag.TiposConta;
    var listaStatusConta = ViewBag.StatusContaPagar;
}
<div class="pagetitle">
    <h1>Contas a Pagar</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Cadastros</li>
            <li class="breadcrumb-item"><a asp-area="" asp-controller="ContaPagar" asp-action="Index">Contas a Pagar</a></li>
            <li class="breadcrumb-item active">Novo</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <form class="row g-3" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-3">
                        <label asp-for="Tipo" class="form-label"></label>
                        <select asp-for="Tipo" class="form-control form-select" asp-items="listaTipoConta"></select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Valor" class="form-label"></label>
                        <input asp-for="Valor" class="form-control" required />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Vencimento" class="form-label"></label>
                        <input asp-for="Vencimento" class="form-control" required />
                        <span asp-validation-for="Vencimento" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-control form-select" asp-items="listaStatusConta"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="Observacoes" class="form-label"></label>
                        <input asp-for="Observacoes" class="form-control" />
                        <span asp-validation-for="Observacoes" class="text-danger"></span>
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                </form><!-- End Multi Columns Form -->
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/js/jquery.validate.pt-BR.js")"></script>
}
