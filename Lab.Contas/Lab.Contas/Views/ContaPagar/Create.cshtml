@model Lab.Contas.Models.ContaPagar

@{
    ViewData["Title"] = "Conta a Pagar";
}
<div class="pagetitle">
    <h1>Contas a Pagar</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Cadastros</li>
            <li class="breadcrumb-item"><a asp-area="" asp-controller="ContaPagar" asp-action="Index">Contas a Pagar</a></li>
            <li class="breadcrumb-item active">Novo</li>
        </ol>
    </nav>
</div>

<partial name="_AlertErro" />

<section class="section">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <form class="row g-3" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <partial name="_Form" />
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/js/jquery.validate.pt-BR.js")"></script>
}
