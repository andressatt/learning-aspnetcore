@model IEnumerable<Lab.Contas.Models.ContaPagar>

@{
    ViewData["Title"] = "Contas a Pagar";
}
<div class="pagetitle">
    <h1>Contas a Pagar</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Cadastros</li>
            <li class="breadcrumb-item"><a asp-area="" asp-controller="ContaPagar" asp-action="Index">Contas a Pagar</a></li>
            <li class="breadcrumb-item active">Index</li>
        </ol>
    </nav>
</div>

<partial name="_AlertSucesso" />
<partial name="_AlertErro" />

<section class="section">
    <p>
        <a asp-action="Create" class="btn btn-primary">Novo</a>
    </p>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                                <th>@Html.DisplayNameFor(model => model.Valor)</th>
                                <th>@Html.DisplayNameFor(model => model.Vencimento)</th>
                                <th>@Html.DisplayNameFor(model => model.Observacoes)</th>
                                <th>@Html.DisplayNameFor(model => model.Status)</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@item.Tipo.GetDescription()</td>
                                    <td>@Html.DisplayFor(modelItem => item.Valor)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Vencimento)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Observacoes)</td>
                                    <td>
                                        @if (item.Status == Util.StatusContaPagar.NaoPago)
                                        {
                                            <span class="badge bg-danger">@item.Status.GetDescription()</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.Status.GetDescription()</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
