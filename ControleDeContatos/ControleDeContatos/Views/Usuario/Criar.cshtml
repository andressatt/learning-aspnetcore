@model UsuarioModel
@{
    ViewData["Title"] = "Cadastrar Usuário";

    var listaPerfis = ViewBag.Perfis;
}
<div class="text-center">
    <h1 class="display-4">Cadastrar Usuário</h1>
</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">
    <div class="mb-3">
        <label asp-for="UsuarioNome" class="form-label"></label>
        <input type="text" asp-for="UsuarioNome" class="form-control" placeholder="Digite seu nome">
        <span asp-validation-for="UsuarioNome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Login" class="form-label"></label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite seu login">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu e-mail" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Senha" class="form-label"></label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Perfil" class="form-label"></label>
        <select asp-for="Perfil" class="form-control form-select" asp-items="listaPerfis"></select>
        <span asp-validation-for="Perfil" class="text-danger"></span>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>
</form>
