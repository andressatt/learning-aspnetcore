@{
    ViewData["Title"] = "Cadastro de Aluno";
}
<form class="row g-3">
    <div class="col-md-3">
        <label for="inputCpf" class="form-label">CPF</label>
        <input type="text" class="form-control" id="inputCpf" data-mask="999.999.999-99" data-mask-selectonfocus="true" required>
    </div>
    <div class="col-md-5">
        <label for="inputNome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="inputNome" placeholder="Nome completo" required>
    </div>
    <div class="col-md-4">
        <label for="inputEmail" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="inputEmail" placeholder="exemplo@email.com" required>
    </div>
    <div class="col-md-3">
        <label for="inputDataNascimento" class="form-label">Data de Nascimento</label>
        <input type="date" class="form-control" id="inputDataNascimento">
    </div>
    <div class="col-md-3">
        <label for="inputRg" class="form-label">RG</label>
        <input type="text" class="form-control" id="inputRg" placeholder="nº do RG" maxlength="15">
    </div>
    <div class="col-md-2">
        <label for="inputSexo" class="form-label">Sexo</label>
        <select id="inputSexo" class="form-select">
            <option selected>-</option>
            <option>F</option>
            <option>M</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </div>
</form>